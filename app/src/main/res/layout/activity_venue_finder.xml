<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_venue_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="za.co.metalojiq.classfinder.someapp.activity.VenueFinder">

    <ProgressBar
            android:id="@+id/venuesLoad"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="8dp"
            android:visibility="visible" />

    <ListView android:layout_width="match_parent"
              android:id="@+id/venuesList"
              android:layout_height="wrap_content">

    </ListView>

    <TextView android:layout_width="match_parent"
              android:id="@+id/venueTvError"
              android:layout_gravity="center|start"
              android:text="Error happened"
              android:layout_height="wrap_content"/>

</RelativeLayout>
