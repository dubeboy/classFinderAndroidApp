<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:layout_marginBottom="2dp"
android:orientation="vertical"
>


    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/runnerRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                    android:id="@+id/runnerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

            <TextView
                    android:id="@+id/runnerCell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0641091553"/>

            <TextView
                    android:id="@+id/runnerLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/runnerEmail"
                    android:text="Braamfontein"/>
            <TextView
                    android:id="@+id/runnerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/runnerLocation"
                    android:text="\@8:00"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
