<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            card_view:cardElevation="0.5dp"
            card_view:cardCornerRadius="2dp"
            android:padding="0dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="match_parent"
                       android:id="@+id/booksIcon"
                       android:padding="0dp"
                       android:layout_margin="0dp"
                       android:scaleType="centerCrop"
                       android:maxHeight="320dp"
                       android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="5dp"
                          android:layout_height="wrap_content">



                <TextView android:layout_width="match_parent"
                          android:text="Engineeing Physics"
                          android:textStyle="bold"
                          android:textColor="#000"
                          android:textSize="20sp"
                          android:layout_height="wrap_content"
                          android:id="@+id/booksTitle"
                />
                <TextView android:layout_width="match_parent"
                          android:text="R 200"
                          android:textStyle="bold"
                          android:textSize="18sp"
                          android:textColor="@color/accent"
                          android:layout_height="wrap_content"
                          android:id="@+id/booksPrice"
                />

                <TextView android:layout_width="match_parent"
                          android:text="dubedivine@gmail.com -- 0641091553"
                          android:layout_height="wrap_content"
                          android:textColor="@color/primary_dark"
                          android:scrollHorizontally="true"
                          android:ellipsize="end"
                          android:maxLines="3"
                          android:id="@+id/booksInfo"
                />

                <TextView android:layout_width="match_parent"
                          android:text=" s ds ddsd ssd sdsd s ds ddsd ssd sdsd s ds ds ddsd ssd sdsd s ds ddsd ssd sdsd s ds ds ddsd ssd sdsd s ds ddsd ssd sdsd s ds ddsd sdsd sdsd"
                          android:layout_height="wrap_content"
                          android:scrollHorizontally="true"
                          android:ellipsize="end"
                          android:maxLines="6"
                          android:id="@+id/booksDesc"
                />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
