<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            card_view:cardElevation="0.3dp"
            card_view:cardCornerRadius="4dp"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="100dp"
                   android:id="@+id/booksIcon"
                   tools:src="@drawable/sample_book"
                   android:padding="0dp"
                   android:scaleType="fitXY"
                   android:layout_margin="0dp"
                   android:layout_height="120dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="5dp"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                      android:text="Engineeing Physics"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="101dp"
                      android:layout_marginStart="101dp"
                      android:id="@+id/booksTitle"
                     />
            <TextView android:layout_width="match_parent"
                      android:text="R 200"
                      android:textSize="18sp"
                      android:textColor="@color/accent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="101dp"
                      android:layout_marginStart="101dp"
                      android:id="@+id/booksPrice"
            />

            <TextView android:layout_width="match_parent"
                      android:text="dubedivine@gmail.com -- 0641091553"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="101dp"
                      android:textColor="@color/primary_dark"
                      android:layout_marginStart="101dp"
                      android:scrollHorizontally="true"
                      android:ellipsize="end"
                      android:maxLines="2"
                      android:id="@+id/booksInfo"
            />

            <TextView android:layout_width="match_parent"
                      android:text=" s ds ddsd ssd sdsd s ds ddsd ssd sdsd s ds ds ddsd ssd sdsd s ds ddsd ssd sdsd s ds ds ddsd ssd sdsd s ds ddsd ssd sdsd s ds ddsd sdsd sdsd"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="101dp"
                      android:scrollHorizontally="true"
                      android:ellipsize="end"
                      android:maxLines="3"
                      android:layout_marginStart="101dp"
                      android:id="@+id/booksDesc"
            />
        </LinearLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
