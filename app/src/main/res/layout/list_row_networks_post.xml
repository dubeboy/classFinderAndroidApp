<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="25dp"

                                    tools:context="za.co.metalojiq.classfinder.someapp.activity.fragment.NetworkPost">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
            <ImageView android:layout_width="40dp"
                       android:id="@+id/network_pro_pic_image"
                       tools:src="@drawable/sample_book"
                       android:layout_height="40dp"/>

            <TextView android:layout_width="wrap_content"
                      android:text="Sample Post Name"
                      android:layout_marginTop="12dp"
                      android:textStyle="bold"
                      android:id="@+id/name"
                      android:layout_toEndOf="@id/network_pro_pic_image"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@id/network_pro_pic_image"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="12dp"
                      android:id="@+id/time"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                      android:text="3h"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView android:layout_width="match_parent"
                   tools:src="@drawable/loader"
                   android:id="@+id/post_image"
                   android:maxHeight="250dp"
                   android:scaleType="center"
                   android:minHeight="100dp"
                   android:layout_height="252dp"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:layout_height="40dp">

            <ImageView android:layout_width="wrap_content"
                       android:onClick="like"
                       android:id="@+id/like"
                       app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                       android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="4dp"
                      android:paddingLeft="3dp"
                      android:text="100 likes"
                      android:id="@+id/likes_count"
                      android:layout_toEndOf="@+id/like"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/like"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_alignParentEnd="true"
                       app:srcCompat="@drawable/ic_comment_black_24dp"
                       android:layout_marginRight="5dp"
                       android:onClick="comment"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <LinearLayout
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:id="@+id/comments_layout"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/comments"
                      android:textColor="#000"
                      android:paddingBottom="5dp"
                      android:text="Johny Ivey This is the best there ever will be man This is the best there ever will be man This is the best there ever will be man"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
